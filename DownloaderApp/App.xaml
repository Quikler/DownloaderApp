             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DownloaderApp"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Themes/Colors.xaml" />

                <ResourceDictionary Source="Themes/TextBoxTheme.xaml" />

                <ResourceDictionary Source="Themes/ComboBoxTheme.xaml" />

                <ResourceDictionary Source="Themes/TitleBarButtonTheme.xaml" />

                <ResourceDictionary Source="Themes/PlaceholderTextBoxTheme.xaml" />

                <ResourceDictionary Source="Themes/MenuItemTheme.xaml" />

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>

</Application>
