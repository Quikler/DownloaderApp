                                    <GeometryDrawing.Brush>

                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">

                                            <GradientStop Offset=".25" Color="#FF004D" />

                                            <GradientStop Offset="1" Color="#FAEF5D" />

